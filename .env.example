# Bot Constructor Environment Configuration
# Скопируйте этот файл в .env и настройте под ваши нужды

# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ===========================================

# Режим работы приложения
NODE_ENV=production

# Порт для веб-сервера
PORT=3000

# Базовый URL для webhook'ов (замените на ваш домен)
WEBHOOK_BASE_URL=https://your-domain.com

# Использовать polling вместо webhook (для разработки)
USE_POLLING=false

# Часовой пояс
TZ=Europe/Moscow

# ===========================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ===========================================

# JWT секретный ключ (сгенерируйте случайную строку)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Секретный ключ для сессий
SESSION_SECRET=your-session-secret-key-change-this

# ===========================================
# НАСТРОЙКИ TELEGRAM
# ===========================================

# Токен для основного бота (если используется)
MAIN_BOT_TOKEN=

# ID администратора (ваш Telegram ID)
ADMIN_TELEGRAM_ID=

# ===========================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ===========================================

# Для будущего использования с PostgreSQL/MongoDB
# DATABASE_URL=postgresql://user:password@localhost:5432/botconstructor
# MONGODB_URL=mongodb://localhost:27017/botconstructor

# ===========================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# ===========================================

# Уровень логирования (error, warn, info, debug)
LOG_LEVEL=info

# Максимальный размер лог файла (в MB)
LOG_MAX_SIZE=10

# Количество лог файлов для ротации
LOG_MAX_FILES=5

# ===========================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# ===========================================

# Максимальное количество одновременных ботов
MAX_CONCURRENT_BOTS=50

# Таймаут для HTTP запросов (в миллисекундах)
HTTP_TIMEOUT=30000

# Максимальный размер загружаемых файлов (в MB)
MAX_FILE_SIZE=10

# ===========================================
# НАСТРОЙКИ РЕЗЕРВНОГО КОПИРОВАНИЯ
# ===========================================

# Автоматическое резервное копирование
AUTO_BACKUP_ENABLED=true

# Интервал резервного копирования (в часах)
BACKUP_INTERVAL=24

# Максимальное количество бэкапов для хранения
MAX_BACKUPS=7

# ===========================================
# НАСТРОЙКИ МОНИТОРИНГА
# ===========================================

# Включить мониторинг здоровья
HEALTH_CHECK_ENABLED=true

# Интервал проверки здоровья (в минутах)
HEALTH_CHECK_INTERVAL=5

# URL для отправки уведомлений о проблемах
ALERT_WEBHOOK_URL=

# ===========================================
# НАСТРОЙКИ РАЗРАБОТКИ
# ===========================================

# Включить режим отладки
DEBUG=false

# Показывать подробные ошибки
VERBOSE_ERRORS=false

# Включить CORS для всех доменов (только для разработки!)
CORS_ORIGIN=false

# ===========================================
# НАСТРОЙКИ RASPBERRY PI
# ===========================================

# Ограничение использования CPU (в процентах)
CPU_LIMIT=80

# Ограничение использования памяти (в MB)
MEMORY_LIMIT=512

# Включить оптимизации для ARM процессора
ARM_OPTIMIZATIONS=true

# ===========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ===========================================

# Название приложения
APP_NAME=Bot Constructor

# Версия приложения (автоматически из package.json)
APP_VERSION=

# Контактная информация для поддержки
SUPPORT_EMAIL=support@your-domain.com

# ===========================================
# ПРИМЕРЫ НАСТРОЕК ДЛЯ РАЗНЫХ СРЕД
# ===========================================

# Для разработки:
# NODE_ENV=development
# USE_POLLING=true
# DEBUG=true
# VERBOSE_ERRORS=true
# CORS_ORIGIN=*

# Для продакшена:
# NODE_ENV=production
# USE_POLLING=false
# DEBUG=false
# VERBOSE_ERRORS=false
# CORS_ORIGIN=https://your-domain.com

# Для тестирования:
# NODE_ENV=test
# USE_POLLING=true
# LOG_LEVEL=debug